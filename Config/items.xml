        <item name="armorRebarHelmet">
            <property name="Extends" value="armorRebarMaster" param1="CustomIcon"/>
            <property name="Tags" value="head,armor,armorHead,heavyarmor"/>
            <property name="CustomIcon" value="armorSteelHelmet"/>
            <property name="CustomIconTint" value="ffca88"/>
            <property name="EquipSlot" value="Head"/>
            <effect_group>
                <passive_effect name="ModSlots" operation="base_set" value="0,5" tier="1,6"/>
                <passive_effect name="PhysicalDamageResist" operation="base_add" value="15"/>
                <passive_effect name="ElementalDamageResist" operation="base_subtract" value="1" tags="head,heat,electrical"/>
                <passive_effect name="HyperthermalResist" operation="base_subtract" value="1"/>
                <passive_effect name="DegradationMax" operation="base_set" value="500,1000" tier="1,6"/>

                <passive_effect name="Mobility" operation="perc_subtract" value="0.25"/>
                <passive_effect name="StaminaChangeOT" operation="perc_subtract" value="0.07" tags="walking"/>
                <passive_effect name="StaminaChangeOT" operation="perc_subtract" value="0.15" tags="running"/>
                <display_value name="dStaminaChangeOT" value="-.15"/>
                <passive_effect name="NoiseMultiplier" operation="perc_add" value="0.5" />
                <passive_effect name="BuffResistance" operation="base_add" value="0.09" tags="buffIllInfection0,buffInjuryBleeding,buffInjuryStunned1"/>
            </effect_group>

            <property class="UMA">
                <property name="Mesh" value="armor_iron_helmet"/>
                <property name="Overlay0" value="armor_iron_helmet"/>
                <property name="Overlay0Tint" value="ffca88"/>
                <property name="Layer" value="middle"/>
                <property name="UISlot" value="Headgear"/>
                <property name="Mask1" value="Head" param1="inner"/>
                <property name="Mask3" value="Face" param1="inner"/>
                <property name="Mask4" value="Face" param1="middle"/>
                <property name="Mask5" value="Face" param1="outer"/>
                <property name="Mask7" value="Eyes" param1="inner"/>
                <property name="Mask8" value="Eyes" param1="middle"/>
                <property name="Mask9" value="Eyes" param1="outer"/>
            </property>
        </item>

        <item name="armorRebarChest">
            <property name="Extends" value="armorRebarMaster" param1="CustomIcon"/>
            <property name="Tags" value="upperbody,chest,armor,armorChest,heavyarmor"/>
