            <property name="CustomIconTint" value="ffca88"/>
            <property name="EquipSlot" value="Chest"/>
            <effect_group>
                <passive_effect name="ModSlots" operation="base_set" value="0,5" tier="1,6"/>
                <passive_effect name="PhysicalDamageResist" operation="base_add" value="15"/>
                <passive_effect name="ElementalDamageResist" operation="base_subtract" value="1" tags="upperbody,heat,electrical"/>
                <passive_effect name="HyperthermalResist" operation="base_subtract" value="1"/>
                <passive_effect name="DegradationMax" operation="base_set" value="500,1000" tier="1,6"/>

                <passive_effect name="Mobility" operation="perc_subtract" value="0.25"/>
                <passive_effect name="StaminaChangeOT" operation="perc_subtract" value="0.07" tags="walking"/>
                <passive_effect name="StaminaChangeOT" operation="perc_subtract" value="0.15" tags="running"/>
                <display_value name="dStaminaChangeOT" value="-.9"/>
                <passive_effect name="NoiseMultiplier" operation="perc_add" value="0.5" />
                <passive_effect name="BuffResistance" operation="base_add" value="0.09" tags="buffIllInfection0,buffInjuryBleeding,buffInjuryStunned1"/>
            </effect_group>

            <property class="UMA">
                <property name="Mesh" value="armor_iron_chest"/>
                <property name="Overlay0" value="armor_iron_chest"/>
                <property name="Overlay0Tint" value="ffca88"/>
                <property name="Layer" value="2"/>
                <property name="UISlot" value="ChestArmor"/>
            </property>
        </item>

        <item name="armorRebarGloves">
            <property name="Extends" value="armorRebarMaster" param1="CustomIcon"/>
            <property name="Tags" value="upperbody,hands,armor,armorHands,heavyarmor"/>
            <property name="CustomIcon" value="armorSteelGloves"/>
            <property name="CustomIconTint" value="ffca88"/>
            <property name="EquipSlot" value="Hands"/>
            <effect_group>
                <passive_effect name="ModSlots" operation="base_set" value="0,5" tier="1,6"/>
                <passive_effect name="PhysicalDamageResist" operation="base_add" value="15"/>
                <passive_effect name="ElementalDamageResist" operation="base_subtract" value="1" tags="upperbody,heat,electrical"/>
                <passive_effect name="HyperthermalResist" operation="base_subtract" value="1"/>
                <passive_effect name="DegradationMax" operation="base_set" value="500,1000" tier="1,6"/>

                <passive_effect name="Mobility" operation="perc_subtract" value="0.25"/>
                <passive_effect name="StaminaChangeOT" operation="perc_subtract" value="0.07" tags="walking"/>
                <passive_effect name="StaminaChangeOT" operation="perc_subtract" value="0.15" tags="running"/>
                <display_value name="dStaminaChangeOT" value="-.9"/>
                <passive_effect name="NoiseMultiplier" operation="perc_add" value="0.5" />
                <passive_effect name="BuffResistance" operation="base_add" value="0.09" tags="buffIllInfection0,buffInjuryBleeding,buffInjuryStunned1"/>
            </effect_group>

            <property class="UMA">
                <property name="Mesh" value="armor_iron_gloves"/>
                <property name="Overlay0" value="armor_iron_gloves"/>
                <property name="Overlay0Tint" value="ffca88"/>
                <property name="Layer" value="0"/>
                <property name="UISlot" value="Gloves"/>
            </property>
        </item>

        <item name="armorRebarLegs">
            <property name="Extends" value="armorRebarMaster" param1="CustomIcon"/>
            <property name="Tags" value="lowerbody,legs,armor,armorLegs,heavyarmor"/>
            <property name="CustomIcon" value="armorSteelLegs"/>
            <property name="CustomIconTint" value="ffca88"/>
            <property name="EquipSlot" value="Legs"/>
            <effect_group>
                <passive_effect name="ModSlots" operation="base_set" value="0,5" tier="1,6"/>
                <passive_effect name="PhysicalDamageResist" operation="base_add" value="15"/>
                <passive_effect name="ElementalDamageResist" operation="base_subtract" value="1" tags="lowerbody,heat,electrical"/>
                <passive_effect name="HyperthermalResist" operation="base_subtract" value="1"/>
                <passive_effect name="DegradationMax" operation="base_set" value="500,1000" tier="1,6"/>
                <passive_effect name="NoiseMultiplier" operation="perc_add" value="0.5" />
                <passive_effect name="Mobility" operation="perc_subtract" value="0.25"/>
                <passive_effect name="StaminaChangeOT" operation="perc_subtract" value="0.07" tags="walking"/>
                <passive_effect name="StaminaChangeOT" operation="perc_subtract" value="0.15" tags="running"/>
                <display_value name="dStaminaChangeOT" value="-.9"/>

                <passive_effect name="BuffResistance" operation="base_add" value="0.09" tags="buffIllInfection0,buffInjuryBleeding,buffInjuryStunned1"/>
            </effect_group>

            <property class="UMA">
                <property name="Mesh" value="armor_iron_pants"/>
                <property name="Overlay0" value="armor_iron_pants"/>
                <property name="Overlay0Tint" value="ffca88"/>
                <property name="Layer" value="3"/>
                <property name="UISlot" value="LegArmor"/>
            </property>
        </item>

        <item name="armorRebarBoots">
            <property name="Extends" value="armorRebarMaster" param1="CustomIcon"/>
            <property name="Tags" value="lowerbody,feet,armor,armorFeet,heavyarmor"/>
            <property name="CustomIcon" value="armorSteelBoots"/>
            <property name="CustomIconTint" value="ffca88"/>
            <property name="EquipSlot" value="Feet"/>
            <effect_group>
                <passive_effect name="ModSlots" operation="base_set" value="0,5" tier="1,6"/>
                <passive_effect name="PhysicalDamageResist" operation="base_add" value="15"/>
                <passive_effect name="ElementalDamageResist" operation="base_subtract" value="1" tags="lowerbody,heat,electrical"/>
                <passive_effect name="HyperthermalResist" operation="base_subtract" value="1"/>
                <passive_effect name="DegradationMax" operation="base_set" value="500,1000" tier="1,6"/>

                <passive_effect name="Mobility" operation="perc_subtract" value="0.25"/>
                <passive_effect name="StaminaChangeOT" operation="perc_subtract" value="0.07" tags="walking"/>
